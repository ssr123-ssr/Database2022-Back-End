@model AccountViewModel

@{
    ViewBag.Title = "注册账户";
}

<form asp-controller="account" asp-action="register" method="post" class="mt-3">

    @*<div asp-validation-summary="All" class="text-danger"></div>*@

    @if (Model.registerStatus == 3)
    {
        <div>
            <div class="alert alert-warning">该用户已存在！</div>
        </div>
    }
    else if (Model.registerStatus == 4)
    {
        <div>
            <div class="alert alert-warning">账号格式错误：用户位7位数字 工作人员为5位数字</div>
        </div>
    }


    <div class="form-group row mb-3">
        <label asp-for="user.ID" class="col-sm-1 col-form-label"></label>

        <div class="col-sm-3">
            <input asp-for="user.ID" class="form-control" placeholder="请输入账号" />
            <span asp-validation-for="user.ID" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label asp-for="user.PASSWORD" class="col-sm-1 col-form-label"></label>

        <div class="col-sm-3">
            <input asp-for="user.PASSWORD" type="password" class="form-control" placeholder="请输入密码" />            
            <span asp-validation-for="user.PASSWORD" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row mb-3">
        <label asp-for="user.ROLE" class="col-sm-1 col-form-label"></label>
        <div class="col-sm-3">
            <select asp-for="user.ROLE" asp-items="Html.GetEnumSelectList<RoleEnum>()" class="custom-select mr-sm-2">
                <option value="">请选择角色</option>
            </select>
            <span asp-validation-for="user.ROLE" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group row">
        <div class="col-sm-1 col-form-label">
        </div>

        <div class="col-sm-1 col-form-label">
            <button type="submit" class="btn-primary">创建</button>
        </div>

        <div class="col-sm-1 col-form-label">
            <a asp-area="" asp-controller="account" asp-action="Login">
                <button type="button" class="btn-primary">登录</button>
            </a>
        </div>

    </div>

</form>



@section Scripts{
<script type="text/javascript">
    
    
</script>

}






