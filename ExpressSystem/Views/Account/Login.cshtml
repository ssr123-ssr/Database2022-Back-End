@model AccountViewModel

@{
    ViewBag.Title = "登录";
}

<form asp-controller="account" asp-action="Login" method="post" class="mt-3">

    @*<div asp-validation-summary="All" class="text-danger"></div> *@

    @if (Model.registerStatus == 1)
    {
        <div>         
            <div class="alert alert-success">注册成功 请登录！</div>
        </div>
    }
    else if (Model.registerStatus == 2)
    {
        <div>            
            <div class="alert alert-warning"> 账号或密码错误 请重新输入！</div>
        </div>
    }



    <div class="form-group row mb-3">
        <label asp-for="user.ID" class="col-sm-1 col-form-label"></label>

        <div class="col-sm-3">
            <input asp-for="user.ID" class="form-control" placeholder="请输入账号" />
            <span asp-validation-for="user.ID" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row mb-3">
        <label asp-for="user.PASSWORD" class="col-sm-1 col-form-label"></label>

        <div class="col-sm-3">
            <input asp-for="user.PASSWORD" type="password" class="form-control" placeholder="请输入密码" />
            <span asp-validation-for="user.PASSWORD" class="text-danger"></span>
        </div>
    </div>


    @*<div class="form-group row mb-3">
            <label asp-for="ROLE" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <select asp-for="ROLE" asp-items="Html.GetEnumSelectList<RoleEnum>()" class="form-select mr-sm-2">
                    <option value="">请选择角色</option>
                </select>
                <span asp-validation-for="ROLE" class="text-danger"></span>
            </div>
        </div>    *@


    <div class="form-group row">

        <div class="col-sm-1 col-form-label">
        </div>

        <div class="col-sm-1 col-form-label">
            <button type="submit" class="btn-primary">登录</button>
        </div>

        <div class="col-sm-1 col-form-label">
            <a asp-area="" asp-controller="account" asp-action="Register">
                <button type="button" class="btn-primary">注册</button>
            </a>
        </div>


    </div>


</form>


